ifeq ($(OS),Windows_NT) #Windows

journal.exe: src\main.cpp
	mkdir build || echo "dir exisit"
	g++ -o build\journal.exe src\main.cpp "$(PATH_cpp_httplib)\out\httplib.cc" -I"$(PATH_cpp_httplib)\out" -D CPPHTTPLIB_OPENSSL_SUPPORT -L.\ -l:"$(wildcard ./build/libssl*)" -l:"$(wildcard ./build/libcrypto*)" -lws2_32 -std=c++14 -ggdb 

else #Linux

journal: src/main.cpp
	mkdir build -p
	g++ src/main.cpp -o build/journal "$(PATH_cpp_httplib)/out/httplib.cc" -I"$(PATH_cpp_httplib)/out" -D CPPHTTPLIB_OPENSSL_SUPPORT -lssl -lcrypto -pthread
endif